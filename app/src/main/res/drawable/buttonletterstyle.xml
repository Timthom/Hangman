<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#4473841c"/>
        </shape>
    </item> <!-- pressed -->
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color= "#641e296c"/>
        </shape>
    </item> <!-- disabled -->
    <item>
        <shape>
            <gradient
                android:startColor= "#84000000"
                android:endColor="#84f5fffa"
                android:angle="270" />
        </shape>
    </item> <!-- default -->
</selector>